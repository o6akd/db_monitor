<%include ./partials/header%>

<div class="container">
        <div class="row">
                <h1 id='lenny' style="font-size:100px;text-align:center;">( ͡° ͜ʖ ͡°)</h1>
            <div style="width: 30%; margin:25px auto;">
                <% include ./partials/messages %>
                <form action="/users/login" method="POST">
                    <div class="form-group">
                            <label for="email">Email</label>
                            <input
                              type="email"
                              id="email"
                              name="email"
                              class="form-control"
                              placeholder="Enter Email"
                            />
                          </div>
                          <div class="form-group">
                            <label for="password">Password</label>
                            <input
                              type="password"
                              id="password"
                              name="password"
                              class="form-control"
                              placeholder="Enter Password"
                            />
                          </div>
    
                    <div class="form-group">
                        <button type="submit" class="btn btn-lg btn-Default btn-block">Login!</button>
                    </div>
                </form>
    
                <div class="row">
                    <div class="col-sm-6">
                        <a href="/"> Go Back </a>
                    </div>
                    <div class="col-sm-6">
                        <a class="justify-content-between" href="/users/register"> Don't have an account? </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%include ./partials/lennyscripts%>


<%include ./partials/footer%>